@model IEnumerable<ProyectoFinal_AndreRodriguez.Models.Machine>

@{
    ViewData["Title"] = "Machines";
}

<h1>Machines</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.qty_products_hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cost_operating_hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prob_fail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.repair_hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_purchase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.condition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qty_products_hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cost_operating_hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prob_fail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.repair_hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_purchase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.condition)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", item)
                @Html.ActionLink("Delete", "Delete", item)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
